                  for (int i = 0; i < productCD.Length; i++)
                  {
                      if (productCD[i] != "")
                      {
                          str = @"Select count(*) from CSU_Glossary WHERE Product_Cd = " + productCD[i] + " AND Term_Name = '" + TermName + "'";
                         


                          int status = Convert.ToInt32(objGetDataFromDB.GetSingleRowFromDB(str.ToString()));

                          if (status == 0)
