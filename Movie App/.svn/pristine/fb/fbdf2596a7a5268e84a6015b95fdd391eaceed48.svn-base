    {
        padding: 0px 34px 14px 3px !important;
    }
    
    
    
    .formproduct > tbody > tr > td:nth-child(3n+3)
    {
        /*color: #ccc;*/
        margin-left: 28px !important;
        position: absolute;
    }
    
    
    .innertable > tbody > tr > td:nth-child(2n+2)
    {
        /*color: #ccc;*/
        margin-left: 182px !important;
        position: absolute;
    }
    .innertable > tbody > tr > td
    {
        padding-bottom: 30px;
